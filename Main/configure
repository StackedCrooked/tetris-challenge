#!/bin/sh

# These environment variables will be read by CMake
export TETRIS_BUILD_TYPE=${TETRIS_BUILD_TYPE:-Release}
export TETRIS_DEPLOY_DMG=${TETRIS_DEPLOY_DMG:-No}
export TETRIS_MINGW=${TETRIS_MINGW:-No}

MAIN_DIR=`pwd`
CMAKE_DIR=$MAIN_DIR/../Build/QtTetris
mkdir -p $CMAKE_DIR
cd $CMAKE_DIR
cmake $MAIN_DIR/QtTetris

echo "\nTo build QtTetris:"
echo "  cd $CMAKE_DIR"
echo "  make VERBOSE=1"
