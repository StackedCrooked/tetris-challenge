#!/bin/sh

# These environment variables will be read by CMake
export TETRIS_BUILD_TYPE=${TETRIS_BUILD_TYPE:-Release}
export TETRIS_DEPLOY_DMG=${TETRIS_DEPLOY_DMG:-No}
export TETRIS_MINGW=${TETRIS_MINGW:-No}

mkdir -p Build
cd Build
cmake ../QtTetris

cd ..
rm -f Makefile
echo "all:\n\tcd Build ; make $*" >> Makefile
echo "\nclean:\n\tcd Build ; make clean" >> Makefile

echo "Delete the \"Build\" directory to erase all configure and build files."
echo "Type \"make\" to start building QtTetris"
